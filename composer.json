{
  "name": "amjadiqbal/laravel-sonner",
  "description": "The ultimate Sonner toast notification wrapper for Laravel. Beautiful, stackable, and lightweight notifications for your Blade and Livewire applications.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Amjad Iqbal"
    }
  ],
  "require": {
    "php": ">=8.1",
    "illuminate/support": "^10.0 || ^11.0",
    "illuminate/view": "^10.0 || ^11.0",
    "illuminate/session": "^10.0 || ^11.0"
  },
  "require-dev": {
    "orchestra/testbench": "^8.0 || ^9.0",
    "pestphp/pest": "^2.0",
    "pestphp/pest-plugin-laravel": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "AmjadIqbal\\Sonner\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "AmjadIqbal\\Sonner\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "AmjadIqbal\\Sonner\\SonnerServiceProvider"
      ]
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "pestphp/pest-plugin-laravel": true
    }
  }
}
